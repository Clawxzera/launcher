{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Retrac Launcher",
    "version": "1.0.8"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "protocol": {
        "all": true,
        "assetScope": ["*/**"]
      },
      "fs": {
        "all": true,
        "scope": ["*/**"]
      },
      "shell": {
        "all": true,
        "execute": true,
        "open": true,
        "scope": [],
        "sidecar": false
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://cdn.0xkaede.xyz/*"
        ]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "maximizable": false,
        "resizable": false,
        "title": "Retrac Launcher",
        "width": 320,
        "height": 154,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "site.retrac",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": []
    }
  }
}
